<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin id="org.eclipse.birt.report.designer.ui.lib"
   name="BIRT Designer UI for Library"
   version="2.0.0"
   provider-name="Eclipse.org">

   <runtime>
      <library name="library.jar">
         <export name="*"/>
      </library>
   </runtime>

   <requires>
      <import plugin="org.eclipse.birt.report.designer.ui"/>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.gef"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.birt.core"/>
      <import plugin="org.eclipse.birt.report.model"/>
      <import plugin="org.eclipse.birt.report.designer.core"/>
      <import plugin="org.eclipse.ui.ide"/>
      <import plugin="org.eclipse.ui.views"/>
      <import plugin="org.eclipse.ui.cheatsheets"/>
      <import plugin="org.eclipse.ui.forms"/>
   </requires>
   

   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension targetID="org.eclipse.ui.resourcePerspective">
         <newWizardShortcut id="org.eclipse.birt.report.designer.ui.wizards.NewLibraryWizard"/>
      </perspectiveExtension>
      <perspectiveExtension targetID="org.eclipse.debug.ui.DebugPerspective">
         <newWizardShortcut id="org.eclipse.birt.report.designer.ui.wizards.NewLibraryWizard"/>
      </perspectiveExtension>
      <perspectiveExtension targetID="org.eclipse.jdt.ui.JavaPerspective">
         <newWizardShortcut id="org.eclipse.birt.report.designer.ui.wizards.NewLibraryWizard"/>
      </perspectiveExtension>
      <perspectiveExtension targetID="org.eclipse.birt.report.designer.ui.ReportPerspective">
         <newWizardShortcut id="org.eclipse.birt.report.designer.ui.wizards.NewLibraryWizard"/>
      </perspectiveExtension>      
   </extension>
      
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.eclipse.birt.report.designer.ui.editors.LibraryReportEditor"
            icon="platform:/plugin/org.eclipse.birt.report.designer.ui/icons/eview16/report.gif"
            contributorClass="org.eclipse.birt.report.designer.ui.actions.LibraryActionBarContributor"
            name="%LibraryEditor"
            id="org.eclipse.birt.report.designer.ui.editors.LibraryReportEditor"
            extensions="rptlibrary"/>  
   </extension>

<extension
         point="org.eclipse.ui.newWizards">
      <category
            name="%WizardCategoryName"
            id="org.eclipse.birt.report.designer.ui.wizard.category"/>
      <wizard
            finalPerspective="org.eclipse.birt.report.designer.ui.ReportPerspective"
            icon="platform:/plugin/org.eclipse.birt.report.designer.ui/icons/obj16/new_report.gif"
            class="org.eclipse.birt.report.designer.ui.wizards.NewLibraryWizard"
            category="org.eclipse.birt.report.designer.ui.wizard.category"
            project="false"
            name="%LibraryWizard"
            id="org.eclipse.birt.report.designer.ui.wizards.NewLibraryWizard">
      <description>%LibraryWizardDescription</description>
      </wizard>      
   </extension>
</plugin>
