<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.eclipse.birt.report.designer.ui.lib"
   name="BIRT Designer UI for Library"
   version="2.1.0"
   provider-name="Eclipse.org"
   class="org.eclipse.birt.report.designer.ui.LibraryPlugin">

   <runtime>
      <library name="library.jar">
         <export name="*"/>
      </library>
   </runtime>

   <requires>
      <import plugin="org.eclipse.birt.report.designer.ui"/>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.gef"/>
      <import plugin="org.eclipse.birt.core"/>
      <import plugin="org.eclipse.birt.report.model"/>
      <import plugin="org.eclipse.birt.report.designer.core"/>
      <import plugin="org.eclipse.birt.report.designer.ui.editors"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.birt.report.designer.ui.editors.schematic"/>
      <import plugin="org.eclipse.ui.views"/>
      <import plugin="org.eclipse.ui.cheatsheets"/>
      <import plugin="org.eclipse.ui.forms"/>
      <import plugin="org.eclipse.ui.workbench.texteditor"/>
   </requires>
   

   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension targetID="org.eclipse.ui.resourcePerspective">
         <newWizardShortcut id="org.eclipse.birt.report.designer.ui.wizards.NewLibraryWizard"/>
      </perspectiveExtension>
      <perspectiveExtension targetID="org.eclipse.debug.ui.DebugPerspective">
         <newWizardShortcut id="org.eclipse.birt.report.designer.ui.wizards.NewLibraryWizard"/>
      </perspectiveExtension>
      <perspectiveExtension targetID="org.eclipse.jdt.ui.JavaPerspective">
         <newWizardShortcut id="org.eclipse.birt.report.designer.ui.wizards.NewLibraryWizard"/>
      </perspectiveExtension>
      <perspectiveExtension targetID="org.eclipse.birt.report.designer.ui.ReportPerspective">
         <newWizardShortcut id="org.eclipse.birt.report.designer.ui.wizards.NewLibraryWizard"/>
      </perspectiveExtension>      
   </extension>

   <extension
         point="org.eclipse.birt.report.designer.ui.editors.multiPageEditorContributor">
      <targetEditor targetEditorId="org.eclipse.birt.report.designer.ui.editors.LibraryEditor">
      <formPage
            class="org.eclipse.birt.report.designer.ui.editors.LibraryLayoutEditorFormPage"
            displayName="%library.layout"
            id="org.eclipse.birt.report.designer.ui.editors.library.layout"
            visible="true"/>
      <formPage
            class="org.eclipse.birt.report.designer.ui.editors.pages.ReportScriptFormPage"
            displayName="%library.script"
            id="org.eclipse.birt.report.designer.ui.editors.library.script"
            visible="true"/>
      <formPage
            class="org.eclipse.birt.report.designer.ui.editors.pages.ReportXMLSourceEditorFormPage"
            displayName="%library.xmlsource"
            id="org.eclipse.birt.report.designer.ui.editors.design.xmlsource"
            visible="true"/>
      </targetEditor>
   </extension>
</plugin>
