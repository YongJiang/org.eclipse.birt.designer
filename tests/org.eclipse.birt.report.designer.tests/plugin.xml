<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.eclipse.birt.report.designer.tests"
   name="BIRT Test Plugin"
   version="1.0.0"
   provider-name="Eclipse.org"
   class="org.eclipse.birt.report.designer.tests.TestsPlugin">

   <runtime>
      <library name="tests.jar">
         <export name="*"/>
      </library>
   </runtime>

   <requires>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.junit"/>
      <import plugin="org.eclipse.gef"/>      
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.ui.ide"/>
      <import plugin="org.eclipse.birt.report.model"/>
      <import plugin="org.eclipse.birt.core"/>
      <import plugin="org.eclipse.birt.data"/>
      <import plugin="org.eclipse.birt.report.designer.core"/>
      <import plugin="org.eclipse.birt.report.designer.ui"/>
      <import plugin="org.eclipse.birt.report.data.oda.jdbc.ui"/>      
      
   </requires>
   <extension
         id="testingMatrix"
         name="Matrix for testing"
         point="org.eclipse.birt.report.model.reportitem">
	    <element class="org.eclipse.birt.report.designer.tests.example.matrix.ROMExtension"				isNameRequired="true" 
			extensionName="TestingMatrix"
			displayNameID="Element.TestingMatrix">
			<property defaultValue="default test" 
				type="string" 
				displayNameID="Element.TestingMatrix.test1" 
				name="test1"/>
			<property type="integer" 
				displayNameID="Element.TestingMatrix.test2" 
				canInherit="false" 
				name="test2"/>
			<property type="xml" 
				displayNameID="Element.TestingMatrix.test3" 
				name="test3"/>
			<property type="choice" 
				displayNameID="Element.TestingMatrix.test5" 
				canInherit="false" 
				name="test5">
				<choice value="one" displayNameID="Choices.test5.choice1" name="choice1"/>
				<choice value="two" displayNameID="Choices.test5.choice2" name="choice2"/>
				<choice value="three" displayNameID="Choices.test5.choice3" name="choice3"/>
			</property>
			<propertyGroup displayNameID="Element.TestingMatrix.group1">
				<property type="string"
					displayNameID="Element.TestingMatrix.test6"
					name="test6"/>
				<property type="integer"
					displayNameID="Element.TestingMatrix.test7"
					name="test7"/>
			</propertyGroup>
		</element>
   </extension>
   <extension
         point="org.eclipse.birt.report.designer.ui.reportitemUI">
      <reportItemUI
            class="org.eclipse.birt.report.designer.tests.example.matrix.TestingMatrixUI"
            extensionName="TestingMatrix">
         <palette
               category="TestCategory"/>
         <editor
               canResize="false"
               showInDesigner="true"/>
         <outline icon="icon/cell.gif"/>
         <builder class="org.eclipse.birt.report.designer.tests.example.matrix.ReportItemBuilderUITest"/>
      </reportItemUI>
   </extension>

</plugin>
